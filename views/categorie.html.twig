{% extends "layout.html.twig" %}
{% block title %}{{ categorie.title }}{% endblock %}

{% block content %}
<p>
	<h1>{{ categorie.title }} :</h1>
	{% for article in articles %}
		<article>
			<h2><a class="articleTitle" href="{{ path('article', { 'id': article.id }) }}">{{ article.title }}</a></h2>
			
		</article>
	{% endfor %}
	
</p>
{% endblock %}
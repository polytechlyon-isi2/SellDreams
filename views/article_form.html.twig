{% extends 'layout.html.twig' %}
{% set adminMenu = true %}

{% block title %}Edition d'article{% endblock %}
{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}

<div class="body">
{{ form_start(articleForm, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="form-group">
        <div class="col-sm-4 control-label">
            Titre
        </div>

        <div class="col-sm-6">
            {{ form_errors(articleForm.title) }}
            {{ form_widget(articleForm.title, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4 control-label">
            Contenu
        </div>
        <div class="col-sm-6">
            {{ form_errors(articleForm.content) }}
            {{ form_widget(articleForm.content, { 'attr':  {
                'class': 'form-control',
                'rows': '8'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4 control-label">
            Categorie
        </div>
        <div class="col-sm-6">
            {{ form_errors(articleForm.categorie) }}
            {{ form_widget(articleForm.categorie, { 'attr':  {
                'class': 'form-control',
            }}) }}
        </div>
    </div>     
    <div class="form-group">
        <div class="col-sm-4 control-label">
            Image
        </div>
        <div class="col-sm-6">
            {{ form_errors(articleForm.img) }}
            {{ form_widget(articleForm.img, { 'attr':  {
                'class': 'form-control',
            }}) }}
            {#<input type="file" name="fichier_photo" />#}
        </div>
    </div>  
    <div class="form-group">
        <div class="col-sm-4 control-label">
            Prix
        </div>
        <div class="col-sm-6">
            {{ form_errors(articleForm.value) }}
            {{ form_widget(articleForm.value, { 'attr':  {
                'class': 'form-control',
            }}) }}
        </div>
    </div>  
        
        
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-3">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </div>
{{ form_end(articleForm) }}
</div>
{% endblock %}
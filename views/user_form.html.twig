{% extends 'layout.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block content %}

{% if form_errors(userForm.password.first) %}
<div class="alert alert-danger">
    {{ form_errors(userForm.password.first) }}
</div>
{% endif %}
<h2>Inscription</h2>
<div class="body">
{{ form_start(userForm, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="form-group">
        <div class="col-sm-5 control-label">
            Nom
        </div>
        <div class="col-sm-4">
            {{ form_errors(userForm.username) }}
            {{ form_widget(userForm.username, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-5 control-label">
            Prénom
        </div>
        <div class="col-sm-4">
            {{ form_errors(userForm.userlastname) }}
            {{ form_widget(userForm.userlastname, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>  
    <div class="form-group">
        <div class="col-sm-5 control-label">
            Adresse
        </div>
        <div class="col-sm-4">
            {{ form_errors(userForm.adress) }}
            {{ form_widget(userForm.adress, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div> 
    <div class="form-group">
        <div class="col-sm-5 control-label">
            Code Postal
        </div>
        <div class="col-sm-4">
            {{ form_errors(userForm.postalcode) }}
            {{ form_widget(userForm.postalcode, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div> 
        <div class="form-group">
        <div class="col-sm-5 control-label">
            Ville
        </div>
        <div class="col-sm-4">
            {{ form_errors(userForm.city) }}
            {{ form_widget(userForm.city, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div> 
        <div class="form-group">
        <div class="col-sm-5 control-label">
            Courriel
        </div>
        <div class="col-sm-4">
            {{ form_errors(userForm.email) }}
            {{ form_widget(userForm.email, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div> 
    
    <div class="form-group">
        {{ form_label(userForm.password.first, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_widget(userForm.password.first, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(userForm.password.second, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_widget(userForm.password.second, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-5 control-label">
            Rôle
        </div>
        <div class="col-sm-2">
            {{ form_errors(userForm.role) }}
            {{ form_widget(userForm.role, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-3">
            <input type="submit" class="btn btn-primary" value="S'inscrire" />
        </div>
    </div>
{{ form_end(userForm) }}
</div>
{% endblock %}
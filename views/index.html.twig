{% extends "layout.html.twig" %}
{% block title %}Home{% endblock %}



{% block content %}
    {% for categorie in categories %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <a class="thumbnail_font" href="{{ path('categorie', { 'id': categorie.id }) }}">
                    <h2>{{ categorie.title }}</h2>
                    <img src="{{ app.request.basepath }}{{ categorie.img }}" alt="">
                </a>
            </div>
        {% endfor %}
        </div>
    </div>     
{% endblock %}
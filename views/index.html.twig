{% extends "layout.html.twig" %}
{% block title %}Home{% endblock %}

{% block content %}
    <div class="container">
        <br>
        <div class="row">
            {% for categorie in categories %}
                <div class="col-md-4">
                    <a class="thumbnail" href="{{ path('categorie', { 'id': categorie.id }) }}">
                        <img src="{{ app.request.basepath }}{{ categorie.img }}" alt=""><h2>{{ categorie.title }}</h2>
                    </a>
                </div>
                {% endfor %}
            </div>
        </div> 
{% endblock %}